{% extends "Characters/baseCharacter.html.twig" %}
{% block contenido %}

            <div class="container">
                <div class="row">
                    <div class="col text-center"><h2>{{character.name}} Specie: {{character.species}}</h2></div>
                </div>
                <div class="row">
                    <div class="col">
                        <img src="{{character.image}}">
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col">Gender:{{character.gender}}</div>
                        </div>
                        <div class="row">
                            <ul>
                               {% for episode in character.episodes %}
                               <li>{{ episode.episode }}</li>
                               {% endfor %}
                            </ul>
                        </div>
                        <iframe width="560" height="315" src="https://www.youtube.com/embed/IVeSw-1VBbo" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
{% endblock %}